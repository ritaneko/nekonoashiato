<div class="row mb-3">
  <div class="col-lg-8 offset-lg-2">
    <%= form_with model: @post, url: [board, post], local: true do |f| %>
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control mb-3', row: 4 %>
      <%= f.submit, class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>