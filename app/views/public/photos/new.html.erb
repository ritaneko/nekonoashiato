<% content_for(:title, 'フォト投稿') %>

<div class="container">
  <div class="row no-gutters">
    <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
      <h5 class="text-dark bg-light p-4 mb-0">画像投稿</h5>
        <div class="form-body p-4">
          <% if @photo.errors.any? %>
            <ul class="alert alert-danger" role="alert">
              <h6 class="alert-heading">
                <%= @photo.errors.count %>件のエラーが発生しました
              </h6>
                <% @photo.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
           </ul>
          <% end %>

          <%= form_with model: @photo do |f| %>
            <%= f.text_field :title, class: "form-control", placeholder: "タイトル" %>
              <%= f.file_field :image, accept: "image/*", class: "w-100" %>
                <div class="input-group mb-3 mt-4">
                  <div class="input-group-prepend">
                    <span class="input-group-text" aria-hidden="true"><i class="fa-solid fa-star"></i></span>
                  </div>
                  <%= f.text_area :body, class: "form-control", rows: "3", placeholder: "一言" %>
                </div>
                <div>
                  <label>タグ(,で区切ると複数タグ登録できます）</label>
                    <%= f.text_field :tag_name, value: @tag_list, class: 'form-control' %>
                </div>
                <hr>
                  <%= f.submit '投稿', class: "btn btn-lg btn-block btn-info mt-4" %>
          <% end %>
        </div>
    </div>
  </div>
</div>
