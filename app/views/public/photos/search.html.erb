<% content_for(:title, 'タグリスト') %>

<div class="container py-5">
  <h2><%= @tag.tag_name %>の投稿一覧</h2>

    <h3 class="mb-3"><タグリスト></h3>
      <% @tag_list.each do |tag| %>
        <i class="fa-sharp fa-solid fa-tag">
          <%= link_to tag.tag_name, search_path(tag_id: tag.id) %>
          <%= "(#{tag.photos.count})" %>
        </i>
      <% end %>
      <% @photos.each do |photo| %>
      <div class="card">
        <div class="card-body">
          <div class="row">
              <div class="col-sm-10 col-md-2">
                <%= image_tag photo.user.get_profile_image(100,100), class: "mt-3 rounded-circle" %>
              </div>
              <div class="col-sm-10 col-md-5">
                <h4 class="card-title">
                  <%= link_to photo_path(photo.id) do %>
                    <strong><i class="fa-solid fa-cat"></i><span>タイトル:<%= photo.title %></span></strong>
                  <% end %>
                </h4>
              </div>
                <div class="col-mt-5">
                  <h4 class="card-text">
                    <span><i class="fa-solid fa-user"></i>ユーザー:<%= photo.user.name %> | </span>
                    <span><i class="fa-solid fa-calendar-days"></i><%= photo.created_at.strftime('%Y/%m/%d') %></span>
                </div>
          </div>
        </div>
      </div>
      <% end %>
      <div class="pagination pagination-sm justify-content_center">
      <%= paginate @photos %>
    </div>
</div>
