<% content_for(:title, 'プロフィール編集') %>

<div class="container">
  <div class="row no-gutters">
   <div class="col-md-5 col-sm-10 mx-2 mx-sm-auto shadow-lg rounded px-0 my-5">
     <h2 class="text-dark bg-light p-4 mb-0">プロフィール編集</h2>
     <div class="form-body p-4">
     <%= form_with model: @user do |f| %>
      <label for="inputName">ニックネーム</label>
       <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      <label for="inputImage">アイコン</label>
       <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class: "w-100" %>
       <%= f.submit "変更を保存", class: "btn btn-success btn-block btn-info mt-5" %>
     <% end %>
      </div>
    </div>
  </div>
</div>