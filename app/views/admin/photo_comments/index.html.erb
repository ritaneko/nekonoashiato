<div class="container mt-5">
  <h3>コメント一覧</h3>
  <table class="table mt-3">
    <tr>
      <th class="col-2">名前</th>
      <th class="col-8">コメント</th>
      <th class="col-1"></th>
      <th class="col-1"></th>
    </tr>
  <% @photo_comments.each do |photo_comment| %>
    <tr>
      <td class="col-2"><%= @users.find(photo_comment.user_id).name %></td>
      <td class="col-8"><%= photo_comment.comment %></td>
      <td class=""><%= photo_comment.created_at.strftime('%Y/%m/%d') %></td>
      <td class="col-1">
      <%= link_to '削除', admin_photo_comments_path(photo_comment), method: :delete, data: { confirm: '本当に削除しますか？' },class: "btn btn-sm btn-danger" %>
      </td>
    </tr>
  <% end %>
  </table>
</div>